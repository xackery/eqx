    "version": "0.2.0",
    "configurations": [
		{
			"name": "(Mac) Debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/eqx",
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"args": ["box.bsp"],
			"environment": [],
			"externalConsole": false,
			"cwd": "${workspaceFolder}/bin/",
			"MIMode": "lldb"
		},
		{
			"name": "(Windows) Debug",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/Debug/eqx.exe",
			"args": ["box.gltf", "box.glb"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build/bin/Debug/",
			"environment": [],
		},
    ]
}